<div class="media">
  <%= image_tag(piece.image.url_cache_buster,
                :title => piece.name,
                :alt => piece.name,
                :class => "img-rounded media-object pull-left",
                :editable => "true",
                :label => "Image") %>

  <div class="media-body pull-left">

    <h4 class="media-heading"><%= piece.name %></h4>

    <%= piece.short_description %>
    <span class="price"><%= number_to_currency(piece.price) %></span>

    <% unless @show_status_only %>
        <%= render 'minisite/add_to_cart', attrs: {piece_id: piece.id}%>
    <% end %>

    <p class="shopping-item">
      <span id='<%= "shopping_item_#{@shopping_item.piece_id}" %>'></span>
    </p>

  </div>
</div>