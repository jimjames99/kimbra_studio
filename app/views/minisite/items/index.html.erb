<h2><%= t(:minisite_admin_customer_items_index_title) %></h2>

<table>
  <thead>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  </thead>
  <tbody>

  <tr>
    <td colspan="<%= @items.size %>">
      <h4>Custom Piece Front</h4>
    </td>
  </tr>
  <tr>
    <% @items.each do |item| %>
        <td>
          <%= image_tag item.front.image_custom_url(:list).to_s + '?' + SecureRandom.hex(8) %>
          <br>
          <%= link_to t(:edit), edit_minisite_item_side_path(item.front) %>
        </td>
    <% end %>
  </tr>

  <% has_back = false %>
  <% @items.each do |item| %>
      <% has_back = true if item.back.present? %>
  <% end %>

  <% if has_back %>
      <tr>
        <td colspan="<%= @items.size %>">
          <h4>Custom Piece Back</h4>
        </td>
      </tr>
      <tr>
        <% @items.each do |item| %>
            <% if item.back.present? %>
                <td>
                  <%= image_tag item.back.image_custom_url(:list).to_s + '?' + SecureRandom.hex(8) %>
                  <br>
                  <%= link_to t(:edit), edit_minisite_item_side_path(item.back) %>
                </td>
            <% end %>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>