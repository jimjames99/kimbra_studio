%h2= @heading

- @stories.includes(:storylines).each do |story|
  %p.story_name_line
    = remote_link_for_ip_related_stories(story)
    = ", #{story.city.to_s.titleize} #{story.state.to_s.upcase} "
    = "at #{story.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%a %b %d %I:%M%p")}"
    %span{ :title => story.referer, :class => :highlight }
      = story.arrival_story
  %ul.story
    - story.storylines.sort{|a,b| a.created_at <=> b.created_at}.each do |storyline|
      %li
        %span.story{ :title=> storyline.url, :class => :highlight }= storyline.description
        = storyline.seconds_comment
  %hr