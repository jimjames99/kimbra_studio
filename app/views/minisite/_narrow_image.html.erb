<%# This layout is for email as well and must retain primitive email-based layout and styles. %>
<layout label="Narrow image">
  <table class="w580" border="0" cellpadding="0" cellspacing="0" width="580">
    <tbody>
    <tr>
      <td class="w280" valign="top" width="280">
        <table class="w280" border="0" cellpadding="0" cellspacing="0"
               width="280">
          <tbody>
          <tr>
            <td class="w280" align="right" width="280">
              <%# TODO refactor this cache buster to be more rails-like. %>
              <%= link_to image_tag(offer.image_url.to_s + '?' + SecureRandom.hex(8),
                                    :title => offer.name,
                                    :alt => offer.name,
                                    :width => offer.width,
                                    :height => offer.height,
                                    :class => "w280",
                                    :editable => "true",
                                    :label => "Image",
                                    :border => 0),
                          url_for_offer_or_not(offer),
                          {:style => "text-decoration: none;"} %>
            </td>
          </tr>
          <tr>
            <td class="w280" height="10" width="280"></td>
          </tr>
          </tbody>
        </table>
      </td>
      <td width="20"></td>
      <td class="w280" valign="middle" width="280">
        <table class="w280" border="0" cellpadding="0" cellspacing="0"
               width="280">
          <tbody>
          <tr>
            <td class="w280" height="10" width="280"></td>
          </tr>
          <tr>
            <td class="w280" width="280">
              <div class="article-content" align="left">
                <p style="color: <%= studio.minisite.font_color %>;">
                  <b><%= offer.name %></b><br/>
                  <%= offer.piece.short_description %><br/>
                  <span class="price"><%= number_to_currency(offer.price) %></span><br/>
                  <%= link_to "Details...", url_for_offer_or_not(offer), {:style => "color: #{@studio.minisite.font_color}; text-decoration: dotted;"} %>
                </p>
              </div>
            </td>
          </tr>
          <tr>
            <td class="w280" height="10" width="280"></td>
          </tr>
          </tbody>
        </table>
      </td>
    </tr>
    </tbody>
  </table>
</layout>