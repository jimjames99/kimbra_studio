<div class="media">
  <% klass = offer.frozen_offer? ? "frozen" : "" %>
  <%= link_to image_tag(offer.try(:image).try(:url_cache_buster),
                        :title    => offer.name,
                        :alt      => offer.name,
                        :width    => offer.width,
                        :height   => offer.height,
                        :class    => "img-rounded #{klass} media-object",
                        :editable => "true",
                        :label    => "Image",
                        :border   => 0),
              url_for_offer_or_not_image(offer),
              class: "pull-left" %>
  <div class="media-body pull-left">

    <h4 class="media-heading">
      <%= link_to_facebook(offer) %>
      <%= link_to_pinterest(offer) %>
      <%= offer.name %>
      <%= "(#{offer.id})" if Rails.env.development? %>
    </h4>

    <% if offer.in_cart?(@cart) %>
        <b><%= icon_minisite('icon-shopping-cart') %>&nbsp;<%= t('in_shopping_cart') %></b><br>
    <% end %>

    <%= render 'minisite/piece_description', offer: offer %>
    <br>
    <span class="price"><%= number_to_currency(offer.price) %></span>
    <p class="shopping-item">
      <span id='<%= "shopping_item_#{offer.id}" %>'></span>
    </p>
  </div>
</div>
<div>
  <%= render 'minisite/buttons', offer: offer%>
</div>
