<div class="row span10 pull-right">

  <div class="media span8">
    <% klass = offer.frozen_offer? ? "frozen" : "" %>
    <%= link_to image_tag(offer.image.url_cache_buster,
                          :title    => offer.name,
                          :alt      => offer.name,
                          :width    => offer.width,
                          :height   => offer.height,
                          :class    => "img-rounded #{klass} media-object",
                          :editable => "true",
                          :label    => "Image",
                          :border   => 0),
                url_for_offer_or_not_image(offer),
                class: "pull-left"%>
    <div class="media-body">

      <h4 class="media-heading"><%= offer.name %></h4>

      <% if offer.frozen_offer? %>
          <b><%= t('in_shopping_cart') %></b><br>
      <% end %>

      <%= offer.piece.short_description %>
      <span class="price"><%= number_to_currency(offer.price) %></span><br/>
      <%= link_to "Details...", url_for_offer_or_not(offer), {:style => "color: #{@studio.minisite.font_color}; text-decoration: dotted;"} %>
    </div>
  </div>

</div>
