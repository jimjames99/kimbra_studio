<div class="row">

  <div class="media">

    <% klass = offer.frozen_offer? ? "frozen" : "" %>
    <%= link_to image_tag(offer.image.url_cache_buster,
                          :title    => offer.name,
                          :alt      => offer.name,
                          :width    => constrain_to_500_px_wide(offer, :width),
                          :height   => constrain_to_500_px_wide(offer, :height),
                          :class    => "img-rounded #{klass} media-object",
                          :editable => "true",
                          :label    => "Image",
                          :border   => 0),
                url_for_offer_or_not_image(offer),
                class: "pull-left" %>
    <div class="media-body">

      <h4 class="media-heading">
        <%= link_to_facebook(offer) %>
        <%= offer.name %>
      </h4>
      <% if offer.frozen_offer? %>
          <b><%= t('in_shopping_cart') %></b><br>
      <% end %>
      <%= offer.piece.short_description %>
      <br>
      <%= link_to "Details...", url_for_offer_or_not(offer), {:style => "color: #{@studio.minisite.font_color}; text-decoration: dotted;"} %>
    </div>
  </div>
  <div class="row">
    <span class="price"><%= number_to_currency(offer.price) %></span>
  </div>

</div>