<%= content_tag :p do %>
    <% offer.piece.try(:short_description).to_s.split(". ").each do |sentence| %>
        <%= sentence.strip %><%= "." unless sentence.strip.last == '.' %>
        <br/>
    <% end %>
<% end if offer.piece.try(:short_description).present? %>

<%= content_tag :p do %>
    <% offer.piece.try(:description_markup).to_s.split(". ").each do |sentence| %>
        <%= sentence.strip %><%= "." unless sentence.strip.last == '.' %>
        <br/>
    <% end %>
<% end if offer.piece.try(:description_markup).present? %>

