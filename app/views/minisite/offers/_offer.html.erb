<div class="media">
  <%= link_to image_tag(offer.try(:image).try(:url_cache_buster),
                        title:    offer.name,
                        alt:      offer.name,
                        class:    "img-rounded media-object",
                        editable: "true",
                        label:    "Image"),
              url_for_offer_or_not_image(offer),
              class: "pull-left" %>
  <div class="media-body pull-left">

    <h4 class="media-heading">
      <%= link_to_facebook(offer) %>
      <%= link_to_pinterest(offer) %>
      <%= offer.name %>
      <%= "(#{offer.id})" if Rails.env.development? %>
    </h4>

    <% if offer.in_cart?(@cart) %>
        <b><%= icon_minisite('icon-shopping-cart') %>&nbsp;<%= t('in_shopping_cart') %></b><br>
    <% end %>

    <%= render 'minisite/offers/piece_description', piece: offer.piece %>
    <br>
    <%= render 'buttons', offer: offer%>
  </div>
</div>
