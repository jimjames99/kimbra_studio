<% @admin_customer_email.offers.sort { |a, b| a.width.to_i <=> b.width.to_i }.each do |offer| %>
    <% if offer.width.to_i < 250 %>
        <%= render :partial => 'minisite/narrow_image', :locals => {:offer => offer, :studio => @studio} %>
    <% else %>
        <%= render :partial => 'minisite/wide_image', :locals => {:offer => offer, :studio => @studio} %>
    <% end %>
<% end %>