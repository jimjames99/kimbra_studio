<div class='row'>
  <h4><%= t('.title') %></h4>
</div>
<% if @admin_customer_offers.size > 0 %>
    <% @admin_customer_offers.sort { |a, b| a.width.to_i <=> b.width.to_i }.each do |offer| %>
        <div class='row'>
          <% if offer.width.to_i < 250 %>
              <%= render 'minisite/narrow_image', offer: offer, studio: @studio %>
          <% else %>
              <%= render 'minisite/wide_image', offer: offer, studio: @studio %>
          <% end %>
        </div>
    <% end %>
<% end %>

<%= form_for(@admin_customer_email.name, :remote => true) do |f| %>
    <p>
      <%= f.hidden_field :email_id %>
      <%= f.hidden_field :offer_id %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= submit_tag 'Name My Collection', :id => 'my_submit2', :class => 'likeabutton' %>
      <span id="spinner" style="display:none" class='spinner'></span>
    </p>
<% end %>

<%= render "index_footer" %>
