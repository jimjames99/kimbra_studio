<%= form_for(@order_item) do |f| %>

    <%= render 'shared/error_messages', record: @order_item %>

    <div class="field">
      <%= f.label :price %>
      <br/>
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :total %>
      <br/>
      <%= f.text_field :total %>
    </div>
    <div class="field">
      <%= f.label :order %>
      <br/>
      <%= f.text_field :order %>
    </div>
    <div class="field">
      <%= f.label :state %>
      <br/>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :tax_rate %>
      <br/>
      <%= f.text_field :tax_rate %>
    </div>
    <div class="field">
      <%= f.label :shipping_rate %>
      <br/>
      <%= f.text_field :shipping_rate %>
    </div>
    <div class="field">
      <%= f.label :shipment %>
      <br/>
      <%= f.text_field :shipment %>
    </div>
    <div class="actions">
      <%= f.submit :id => 'my_submit' %>
      <span id="spinner" style="display:none" class='spinner'></span>
    </div>
<% end %>