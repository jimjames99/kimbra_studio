<%# This layout is for email and must retain primitive email-based layout and styles. %>
<layout label="Narrow image">
  <table class="w580" border="0" cellpadding="0" cellspacing="0" width="580">
    <tbody>
    <tr>
      <td class="w280" valign="top" width="280">
        <table class="w280" border="0" cellpadding="0" cellspacing="0"
               width="280">
          <tbody>
          <tr>
            <td class="w280" align="right" width="280">
              <%= link_to image_tag(attachments['offer_image.jpg'].url,
                                    :title    => offer.name,
                                    :alt      => offer.name,
                                    :width    => offer.width,
                                    :height   => offer.height,
                                    :class    => "w280 img-rounded",
                                    :editable => "true",
                                    :label    => "Image",
                                    :border   => 0),
                          minisite_email_offers_url(email),
                          {:style => "text-decoration: none;"} %>
            </td>
          </tr>
          <tr>
            <td class="w280" height="10" width="280"></td>
          </tr>
          </tbody>
        </table>
      </td>
      <td width="20"></td>
      <td class="w280" valign="middle" width="280">
        <table class="w280" border="0" cellpadding="0" cellspacing="0"
               width="280">
          <tbody>
          <tr>
            <td class="w280" height="10" width="280"></td>
          </tr>
          <tr>
            <td class="w280" width="280">
              <div class="article-content" align="left">
                <p style="color: <%= studio.minisite.font_color %>;">
                  <% if offer.frozen_offer? %>
                      <b><%= t('in_shopping_cart') %></b><br>
                  <% end %>
                  <b><%= offer.name %></b><br/>
                  <%= offer.piece.short_description %><br/>
                  <span class="price"><%= number_to_currency(offer.price) %></span><br/>
                  <%= link_to "Details...", minisite_email_offers_url(email), {:style => "color: #{studio.minisite.font_color}; text-decoration: dotted;"} %><br>
                </p>
              </div>
            </td>
          </tr>
          <tr>
            <td class="w280" height="10" width="280"></td>
          </tr>
          </tbody>
        </table>
      </td>
    </tr>
    </tbody>
  </table>
</layout>