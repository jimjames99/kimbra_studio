<!DOCTYPE html>
<html>
<head>
  <title><%= content_for :page_title %></title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
<div id='body_wrapper'>
  <%= render 'shared/showroom_header', :showroom => @showroom %>
  <div class="bp">
    <%= raw "<p class='flash_notice'> #{notice}</p>" if notice %>
    <%= raw "<p class='flash_error'>#{alert}</p>" if alert %>
  </div>
  <table class="showroom_nav" style="border:1px solid white">
    <tr>
      <td style="border:1px solid white;width:25%">
        <% url = @tracking ? collection_minisite_showroom_path(@tracking) : collection_minisite_showroom_path %>
        <%= link_to t(:minisite_menu_custom_work_link), url %>
      </td>
      <td style="border:1px solid white;width:25%">
        About <%= content_for :page_title %>
      </td>
      <td style="border:1px solid white;width:25%">
        <%= t(:minisite_menu_custom_work_link) %>
      </td>
      <td style="border:1px solid white;width:25%">
        <%=  link_to t(:minisite_menu_shopping_cart_link), shopping_cart_path(@cart), :class=>'my-submit' %>
      </td>
    </tr>
  </table>
  <div id='content_wrapper' class='container'>
    <%= yield %>
  </div>
</div>
<div id="footer_buffer" class='bp'>
  &nbsp;
</div>
</div>
<%= render 'shared/main_footer' %>
<%= yield :bottom %>
<script>
    jQuery(window).ready(
            function () {
                jQuery('.flash_notice').delay(6000).slideUp('slow');
                jQuery('.flash_error').delay(6000).slideUp('slow');
            }
    );
</script>
<%# javascript_include_tag :defaults %>
<%#= javascript_include_tag 'jquery-1.4.2.min', 'rails' %>
<%#= javascript_include_tag :all, :cache => true %>
</body>
<%= yield :below_body %>
</html>