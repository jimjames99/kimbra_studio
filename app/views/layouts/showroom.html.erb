<!DOCTYPE html>
<html>
<head>
  <title>NAME OF STUDIO HERE</title>

  <%= stylesheet_link_tag "application" %>

  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<div id='body_wrapper'>

  <div class="bp">
    <%= raw "<p class='flash_notice'> #{notice}</p>" if notice %>
    <%= raw "<p class='flash_error'>#{alert}</p>" if alert %>
  </div>

  <div id="header_wrapper" class='bp'>
    <div class="container logged-in" id="header">
      <ul id="menu-main">
        <li class="" id="menu-main-user">
          <div>
            <% if user_signed_in? %>
                <strong>Hi <%= current_user.try(:email) %></strong>
                <span>(<%= link_to translate(:not_you), destroy_user_session_path, method: :delete  %>)</span>
            <% else %>
                <strong><%= link_to translate(:sign_in), new_user_session_path %></strong> or
                <span><%= link_to translate(:sign_up), new_user_registration_path %></span>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <div id='content_wrapper' class='container'>
    <%= yield %>
  </div>
</div>

<div id="footer_buffer" class='bp'>
  &nbsp;
</div>
</div>

<%= render 'shared/main_footer' %>

<%= yield :bottom %>

<script>
    jQuery(window).ready(
            function() {
                jQuery('.flash_notice').delay(6000).slideUp('slow');
                jQuery('.flash_error').delay(6000).slideUp('slow');
            }
    );
</script>

<%# javascript_include_tag :defaults %>
<%#= javascript_include_tag 'jquery-1.4.2.min', 'rails' %>
<%#= javascript_include_tag :all, :cache => true %>
</body>
<%= yield :below_body %>
</html>
