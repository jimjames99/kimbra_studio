<!DOCTYPE html>
<html>
<head>
  <title><%= content_for :page_title %></title>
  <%= stylesheet_link_tag "minisite" %>
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => 'stripe-key', :content => STRIPE_PUBLIC_KEY %>
  <%= yield :head %>
</head>
<body>

<div id='body_wrapper'>

  <%= render 'shared/minisite_header', :studio => @studio %>

  <div id='content_wrapper' class='container'>
    <%= yield %>
  </div>

</div>

<div id="footer_buffer" class='bp'>
  &nbsp;
</div>

</div>

<%= render 'shared/minisite_footer' %>
<%= yield :bottom %>

</body>
<%= yield :below_body %>
</html>