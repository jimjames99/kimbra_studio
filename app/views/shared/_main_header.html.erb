<div id="header_wrapper" class='bp'>
  <div class="container logged-in" id="header">
    <ul id="menu-main">
      <li class="" id="menu-main-user">
        <div>
          <% if user_signed_in? %>
              <strong>Hi <%= current_user.try(:email) %></strong>
              <span>(<%= link_to translate(:not_you), destroy_user_session_path, method: :delete %>)</span>
              <script type="text/javascript">
                  $(document).ready(function () {
                      olark('api.chat.updateVisitorNickname', {
                          snippet:'<%= current_user.name %>'
                      });
                  });
              </script>
          <% else %>
              <strong><%= link_to translate(:sign_in), new_user_session_path %></strong> or
              <span><%= link_to translate(:sign_up), new_user_registration_path %></span>
          <% end %>
        </div>
      </li>
    </ul>

    <table>
      <tr>
        <td>
          <%= link_to t(:my_studio_overview_link), my_studio_overview_url %>
        </td>
        <td>
          <%= link_to t(:admin_overview_link), admin_overview_url %>
        </td>
        <td colspan="2">
          &nbsp;
        </td>
        <td>
          <%= link_to t(:myaccount_overview_link), myaccount_overview_url %>
        </td>
      </tr>
    </table>

  </div>
</div>