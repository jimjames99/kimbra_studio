<div id="header_wrapper">
  <div class="container logged-in" id="header">
    <div id='login'>
      <% if user_signed_in? %>
          <strong><%= current_user.try(:email) %></strong>
          <span>(<%= link_to translate(:not_you), destroy_user_session_path, method: :delete %>)</span>
          <script type="text/javascript">
              $(document).ready(function () {
                  olark('api.chat.updateVisitorNickname', {
                      snippet:'<%= current_user.name %>'
                  });
              });
          </script>
      <% else %>
          <strong><%= link_to translate(:sign_in), new_user_session_path %></strong>
          <!--
          or
          <span><%= link_to translate(:sign_up), new_user_registration_path %></span>
          -->
          or <span><%= link_to translate(:sign_up), signup_about_path %></span>
      <% end %>
    </div>

    <% display_h1 = t(:company_brand) %>
    <% if user_signed_in? %>
        <% if is_admin? %>
            <% display_h1 = t(:admin_overview_title) %>
        <% else %>
            <% display_h1 = @my_studio.try(:name) %>
        <% end %>
    <% end %>

    <h1 class='logo' style='text-align:left;'> <%= link_to display_h1, root_path %> </h1>

    <div id='main_nav'>
      <% if is_admin? %>
          <div class='menu_item'>
            <%= link_to t(:admin_menu_overview), admin_overview_url %>
          </div>
          <div class='menu_item'>
            <%= link_to t(:admin_menu_emails), admin_customer_emails_path %>
          </div>
          <div class='menu_item'>
            <%= link_to t(:admin_menu_merchandise), admin_merchandise_pieces_path %>
          </div>
          <div class='menu_item'>
            <%= link_to t(:admin_menu_studios), studios_path %>
          </div>
          <div class='menu_item'>
            <%= link_to t(:admin_menu_users), users_path %>
          </div>
          <div class='menu_item_right'>
            <%= link_to t(:admin_menu_stories), admin_stories_path %>
          </div>
      <% else %>
          <% if current_user and !current_user.client? %>
              <div class='menu_item'>
                <%= link_to t(:my_studio_overview_link), my_studio_dashboard_path %>
              </div>
              <div class='menu_item'>
                <%= link_to t(:my_studio_overview_label_session), my_studio_sessions_path %>
              </div>
              <!-- remove for now until we have studios with staff
              <div class='menu_item'>
                <%= link_to t(:my_studio_overview_label_staff, :action => 'View '), my_studio_staffers_path %>
              </div>
              <div class='menu_item'>
                <%= link_to t(:my_studio_overview_label_info, :action => 'View '), user_path(current_user) %>
              </div>
              <% unless current_user.studio.nil? %>
                  <div class='menu_item'>
                    <%= link_to t(:my_studio_overview_label_studio, :action => 'View '), studio_path(current_user.studio) %>
                  </div>
              <% end %>
              -->
          <% else %>
              <div class='menu_item'>
                <%= t(:company_brand) %>
              </div>
          <% end %>
      <% end %>

    </div>
  </div>
</div>