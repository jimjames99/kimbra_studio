<style type="text/css">
    body {
        background-color: <%= studio.try(:minisite).try(:bgcolor) %>;
        font-family: <%= studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
        color: <%= studio.try(:minisite).try(:font_color) %>;
        padding: 60px;
        padding-top: <%=studio.try(:minisite).try(:body_padding)%>px;
    }

    .hero-unit, .navbar {
        background-color: <%= studio.try(:minisite).try(:bgcolor) %>;
        font-family: <%= studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
        color: <%= studio.try(:minisite).try(:font_color) %>;
    }
    .navbar .navbar-inner {
        background-color: <%= studio.try(:minisite).try(:bgcolor) %>;
        background-image: none;
    }

    div.navbar {
        border-bottom: 1px solid <%=studio.try(:minisite).try(:calc_border_color) %>;
    }
    .form-actions{
        background-color: <%= studio.try(:minisite).try(:bgcolor) %>;
    }
    .likeabutton {
        background: ButtonFace;
        color: ButtonText;
        border-color: ButtonHighlight ButtonShadow ButtonShadow ButtonHighlight;
    }

    .likeabutton.selected,
    .likeabutton:hover {
        border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
        background: #FFDA75;
    }

    .likeabutton:active {
        border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
    }

    a {
        color: <%= studio.try(:minisite).try(:font_color) %>;
    }

    a.link {
        color: <%= studio.try(:minisite).try(:font_color) %>;
    }

    a.visited {
        color: <%= studio.try(:minisite).try(:font_color) %>;
    }

    a.focus, a.hover {
        color: <%= studio.try(:minisite).try(:font_color) %>;
    }

    a.active {
        color: <%= studio.try(:minisite).try(:font_color) %>;
    }

    div.row div.media {
        padding: 10px;
        text-align: left;
    }

    .media-object {
        margin: 10px;
    }

    h4.media-heading {
        text-align: left;
    }

    span.price {
        display: block;
    }

    .navbar-header-top-row {
        text-align: center;
    }
    .navbar-header-top-row .pull-left,
    .navbar-header-top-row .pull-right{
        padding: 20px;
    }
    .navbar-header-top-row .pull-left{
        padding-left: 40px;
    }
    div.platypus-form{
      padding: 10px 15px;
      margin-bottom: 15px;
      @include rounded-corners(10px);
      border: 2px outset black;
      text-align: left;
    }


</style>


<div class="navbar navbar-inverse navbar-fixed-top">

  <div class="row navbar-header-top-row">

    <div class="row">

      <div class="pull-left span2">
        <address>
          <strong><%= studio.name %></strong><br>
          <%= studio.address_1 %>
          <br>
          <%= studio.city_state_zip %>
          <br>
          <abbr title="Phone">P:</abbr> <%= studio.phone_number %>
        </address>
      </div>

      <img id="xlogo" src="<%= studio.minisite.image %>" title="<%= studio.name %>">
      <div class="pull-right">
        <% if current_user_facebook %>
            <%= image_tag current_user_facebook.image_url, class: "rounded" %>
        <% end %>
      </div>
    </div>

  </div>

  <div class="navbar-inner">

    <div class="container">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <ul class="nav pull-right">
        <li>
          <% if current_user_facebook %>
              <%= link_to "Sign out Facebook", facebook_signout_path, id: "sign_out" %>
          <% else %>
              <%= link_to image_tag("fb_login.png"), '/auth/facebook', {:style => "color: #{@studio.minisite.font_color}; text-decoration: dotted;"} %>
          <% end %>
        </li>
      </ul>

<%# do not show the navigation bar if Kimbra is entering the delivery tracking number  %>
      <% unless controller_name == 'carts' && action_name == 'edit_delivery_tracking' %>
          <!-- Everything you want hidden at 940px or less, place within here -->

          <div class="nav-collapse collapse">

            <ul class='nav'>
              <li>
                <a class="brand" href="#"><%= studio.name %></a>
              </li>
              <li>
                <%= link_to_your_collection_or_not(admin_customer_email) %>
              </li>
              <li>
                <%= link_to_your_charms_or_not(admin_customer_email) %>
              </li>
              <li>
                <%= link_to_your_chains_or_not(admin_customer_email) %>
              </li>
              <li>
                <%= link_to_unless_current t('.menu_about', studio_name: studio.name),
                                           about_minisite_email_path(admin_customer_email.tracking) %>
              </li>
              <li>
                <% if is_admin? %>
                    <%= link_to t('.menu_sessions'), admin_overview_path %>
                <% elsif is_studio? %>
                    <%= link_to t('.menu_sessions'), my_studio_sessions_path %>
                <% else %>
                    <%= link_for_shopping_cart_nav %>
                <% end %>
              </li>

            </ul>
          </div>
      <% end %>
    </div>

  </div>
</div>

