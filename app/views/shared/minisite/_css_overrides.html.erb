<style type="text/css">
    body {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        font-family: <%= @studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
        /*padding-top: <%=@studio.try(:minisite).try(:body_padding)%>px;*/
    }

    .hero-unit, .navbar {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        font-family: <%= @studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .likeabutton {
        background: ButtonFace;
        color: ButtonText;
        border-color: ButtonHighlight ButtonShadow ButtonShadow ButtonHighlight;
    }

    .likeabutton.selected,
    .likeabutton:hover {
        border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
        background: #FFDA75;
    }

    .likeabutton:active {
        border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
    }

    a {
        color: <%= @studio.try(:minisite).try(:font_color) %>;
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
    }

    a:link,
    a:visited,
    a:focus,
    a:hover{
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    a.active {
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }
    a[role="button"]{
        <% if @studio.minisite.background_dark? %>
        color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        <% end %>
    }
    /* bootstrap navbar and navbar-inverse */
    .navbar .navbar-inner {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        background-image: none;
    }

    div.navbar {
        border-bottom: 1px solid <%=@studio.navbar_border_color %>;
    }

    .navbar-header-top-row {
        text-align: center;
    }

    .no-border {
        border: 0;
    }
    .navbar-inverse .nav > .active > a,
    .navbar-inverse .nav > .active > a:hover,
    .navbar-inverse .nav > .active > a:focus {
        background-color: <%= @studio.navbar_background %>;
        color: <%= @studio.navbar_color %>;
    }

    <% unless @studio.minisite.background_dark? %>
    .navbar-inverse .nav > li > a {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .navbar-inverse .nav > li > a:focus,
    .navbar-inverse .nav > li > a:hover {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }
    <% else %>
    div.modal {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }
    <% end %>

    /* bootstrap form_actions div */
    .form-actions {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
    }

    /* bootstrap media tag overrides */
    div.row div.media {
        padding: 10px;
        text-align: left;
    }

    .media-object {
        margin: 10px;
    }

    h4.media-heading {
        text-align: left;
    }


    div.platypus-form {
        padding: 10px 15px;
        margin-bottom: 15px;
    @include rounded-corners ( 10 px );
        border: 2px outset black;
        text-align: left;
    }


</style>