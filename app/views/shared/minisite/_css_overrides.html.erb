<style type="text/css">
    body {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        font-family: <%= @studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
        /*padding-top: <%=@studio.try(:minisite).try(:body_padding)%>px;*/
    }
    input,
    button,
    select,
    textarea {
      font-family: <%= @studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
    }

    .navbar {
        font-family: <%= @studio.try(:minisite).try(:font_family) %>, Arial, sans-serif;
    }

    .likeabutton {
        background: ButtonFace;
        color: ButtonText;
        border-color: ButtonHighlight ButtonShadow ButtonShadow ButtonHighlight;
    }

    .likeabutton.selected,
    .likeabutton:hover {
        border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
        background: #FFDA75;
    }

    .likeabutton:active {
        border-color: ButtonShadow ButtonHighlight ButtonHighlight ButtonShadow;
    }

    /*a {*/
        /*color: <%= @studio.try(:minisite).try(:font_color) %>;*/
        /*background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;*/
    /*}*/

    /*a:link,*/
    /*a:visited,*/
    /*a:focus,*/
    /*a:hover{*/
        /*color: <%= @studio.try(:minisite).try(:font_color) %>;*/
    /*}*/

    /*a.active {*/
        /*color: <%= @studio.try(:minisite).try(:font_color) %>;*/
    /*}*/
    a[role="button"]{
        <% if @studio.minisite.background_dark? %>
        color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        <% end %>
    }
    a.btn{
        <% if @studio.minisite.background_dark? %>
        color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        <% end %>
    }

    .navbar .studio-address{
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }
    .navbar .studio-address > a:link,
    .navbar .studio-address > a:visited,
    .navbar .studio-address > a:focus,
    .navbar .studio-address > a:hover{
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .navbar .studio-address > a.active,
    .navbar .studio-address > address > a{
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .minisite a:link,
    .minisite a:visited,
    .minisite a:focus,
    .minisite a:hover{
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .minisite a.active,
    .minisite a{
        /*color: <%= @studio.try(:minisite).try(:font_color) %>;*/
        color: red;
    }

    /* minisite footer style */
    .minisite > ul > li > a {
        color: <%= @studio.try(:minisite).try(:font_color) %>;
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
    }

    .minisite > ul > li > a:link,
    .minisite > ul > li > a:visited,
    .minisite > ul > li > a:focus,
    .minisite > ul > li > a:hover{
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .minisite > ul > li > a.active {
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    div.navbar {
        border-bottom: 1px solid <%=@studio.navbar_border_color %>;
    }

    .navbar-header-top-row {
        text-align: center;
    }

    .no-border {
        border: 0;
        text-align: center;
    }
    .navbar-inverse .nav > .active > a,
    .navbar-inverse .nav > .active > a:hover,
    .navbar-inverse .nav > .active > a:focus {
        background-color: <%= @studio.navbar_background %>;
        color: <%= @studio.navbar_color %>;
    }

    <% unless @studio.minisite.background_dark? %>
    .navbar-inverse .nav > li > a {
        background-color: <%= @studio.try(:minisite).try(:nav_bgcolor) %>;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }

    .navbar-inverse .nav > li > a:focus,
    .navbar-inverse .nav > li > a:hover {
        background-color: <%= @studio.try(:minisite).try(:nav_bgcolor) %>;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }
    <% else %>
    div.modal {
        background-color: <%= @studio.try(:minisite).try(:bgcolor) %>;
        color: <%= @studio.try(:minisite).try(:font_color) %>;
    }
    <% end %>

    /* bootstrap media tag overrides */
    div.row div.media {
        padding: 10px;
        text-align: left;
    }

    .media-object {
        margin: 10px;
    }

    h4.media-heading {
        text-align: left;
    }


    div.platypus-form {
        padding: 10px 15px;
        margin-bottom: 15px;
    @include rounded-corners ( 10 px );
        border: 2px outset black;
        text-align: left;
    }
    .offer-actions{
        border-bottom: 1px solid #E5E5E5;

    }

</style>