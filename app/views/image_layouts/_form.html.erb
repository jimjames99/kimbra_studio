<%= form_for(@image_layout) do |f| %>

    <%= render 'shared/error_messages', record: @image_layout %>

    <div class="field">
      <%= f.label :type %>
      <br/>
      <%= f.text_field :type %>
    </div>
    <div class="field">
      <%= f.label :x %>
      <br/>
      <%= f.number_field :x %>
    </div>
    <div class="field">
      <%= f.label :y %>
      <br/>
      <%= f.number_field :y %>
    </div>
    <div class="field">
      <%= f.label :width %>
      <br/>
      <%= f.number_field :width %>
    </div>
    <div class="field">
      <%= f.label :height %>
      <br/>
      <%= f.number_field :height %>
    </div>
    <div class="field">
      <%= f.label :rotation %>
      <br/>
      <%= f.text_field :rotation %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
