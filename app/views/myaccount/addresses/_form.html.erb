<% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this shipping address from being saved:</h2>

      <ul>
        <% @address.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<div class='main-address'>
  <div class="inline">
    <div class="field column">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :class => 'span-3' %>
    </div>

    <div class="field column">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class => 'span-3' %>
    </div>
  </div>
  <div class='clear'></div>
  <div class="inline">
    <div class="field column">
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
      <br/>

      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>
  </div>
  <div class='clear'></div>

  <div class='clear'></div>
  <div class="inline span-12">
    <div class="field column">
      <%= f.label :city %>
      <%= f.text_field :city, :class => 'span-3' %>
    </div>

    <!-- LDB: moved after city  dropped state name-->
    <div class="field column">
      <%= f.label :state_id, "State/Province" %>
      <%= f.select :state_id, @states,
                   :include_blank => true %>
    </div>

    <div class="field column">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, :class => 'span-2' %>
    </div>
  </div>

  <div class='clear'></div>
  <div class="field">
    <%#= f.input :phone %>
  </div>
</div>
<div class="field column">
  <%= check_box_tag :default, 1, f.object.default? %><%= f.label :default, "Make this my default shipping method", :class => 'auto_width' %>
</div>

<div class="actions column prepend-1">
  <%= f.submit %>
</div>
