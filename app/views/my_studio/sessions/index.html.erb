<h2>
  <%= t(:my_studio_sessions_index_title, name: '') %>
  <small>
    <% if session[:search_my_studio_sessions].blank? %>
        count:<%= @record_count %>
    <% else %>
        search result count:<%= @record_count %>
    <% end %>
  </small>
</h2>

<div class="row">

  <div class="span5">

    <form class="form-search">
      <div class="input-append">
        <%= text_field_tag(:search, session[:search_my_studio_sessions], class: "span4 search-query", placeholder: 'By Photo Session or Client or Email') %>
        <%= submit_tag "Search", name: nil, class: "btn" %>
      </div>
    </form>
  </div>

  <% unless is_admin? %>
    <%= render 'new_session_button' %>
  <% end %>

</div>

<div class="paginate">
  <%= paginate @sessions %>
</div>

