<h2>
  <%= t(:my_studio_sessions_index_title, name: '') %>
  <small>
    <% if session[:search_my_studio_sessions].blank? %>
        count:<%= @record_count %>
    <% else %>
        search result count:<%= @record_count %>
    <% end %>
  </small>
</h2>

<div class="row">

  <div class="span5">

    <form class="form-search">
      <div class="input-append">
        <%= text_field_tag(:search, session[:search_my_studio_sessions], class: "span4 search-query", placeholder: 'By Photo Session or Client or Email') %>
        <%= submit_tag "Search", name: nil, class: "btn" %>
      </div>
    </form>
  </div>

  <% unless is_admin? %>
      <div class="span3">
        <%= form_tag new_my_studio_session_path, method: :get, class: "pull-right" do %>
            <button type="submit" class="btn btn-success">
              <i class="icon-plus icon-white"></i>
              <%= t(:my_studio_sessions_new_link) %>...
            </button>
        <% end %>
      </div>
  <% end %>

</div>

<div class="paginate">
  <%= paginate @sessions %>
</div>

