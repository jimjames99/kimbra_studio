<h2>
  <%= t(:my_studio_sessions_index_title, name: '') %>
  <small>current session count:<%= @record_count %></small>
</h2>

<div class="row">

  <form class="form-search span4">
    <div class="input-append">
      <%= text_field_tag(:search, session[:search_my_studio_sessions], class: "span4 search-query", placeholder: 'By Photo Session or Client or Email') %>
      <%= submit_tag "Search", name: nil, class: "btn" %>
    </div>
  </form>

  <% unless is_admin? %>
      <%= form_tag new_my_studio_session_path, method: :get, class: "pull-right" do %>
          <button type="submit" class="btn btn-success">
            <i class="icon-plus icon-white"></i>
            <%= t(:my_studio_sessions_new_link) %>...
          </button>
      <% end %>
  <% end %>

</div>

<div class="paginate">
  <%= paginate @sessions %>
</div>

