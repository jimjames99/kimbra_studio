<h1>Listing my_studio_sessions</h1>

<%= link_to 'New Session', new_my_studio_session_path %>
<br/>
<%= link_to 'My Studio', my_studio_overview_path %>

<table>
  <tr>
    <th>Name</th>
    <th>When</th>
    <th>Active?</th>
    <th>Category</th>
    <th>Client</th>
    <th>Portraits</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @my_studio_sessions.each do |my_studio_session| %>
  <tr>
    <td><%= my_studio_session.name %></td>
    <td><%= my_studio_session.session_at %></td>
    <td><%= my_studio_session.active %></td>
    <td><%= my_studio_session.category_name %></td>
    <td><%= my_studio_session.client.try(:name) %></td>
    <td><%= link_to 'Portraits', my_studio_session_portraits_path(my_studio_session) %></td>
    <td><%= link_to 'Show', my_studio_session %></td>
    <td><%= link_to 'Edit', edit_my_studio_session_path(my_studio_session) %></td>
    <td><%= link_to 'Destroy', my_studio_session, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
