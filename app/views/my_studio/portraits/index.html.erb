<h1><%=t(:my_studio_portraits_index_title)%></h1>
<h3><%=t(:my_studio_portraits_session, :name => @my_studio_session.try(:name)) %></h3>

<%= link_to t(:my_studio_portraits_new_link), new_my_studio_session_portrait_path(@my_studio_session) %>
<br/>
<%= link_to t(:back), my_studio_sessions_path %>

<table>
  <tr>
    <th>Description</th>
    <th>Active?</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @my_studio_portraits.each do |my_studio_portrait| %>
      <tr>
        <td><%= my_studio_portrait.description %></td>
        <td><%= my_studio_portrait.active %></td>
        <td><%= image_tag_list(my_studio_portrait) %></td>
        <td><%= link_to t(:show), my_studio_session_portrait_path(@my_studio_session, my_studio_portrait) %></td>
        <td><%= link_to t(:edit), edit_my_studio_session_portrait_path(@my_studio_session, my_studio_portrait) %></td>
        <td><%= link_to 'Destroy', my_studio_session_portrait_path(@my_studio_session, my_studio_portrait), confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

