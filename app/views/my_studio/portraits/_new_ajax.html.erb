<% url = @my_studio_portrait.id.nil? ? my_studio_session_portraits_path(@my_studio_session) : my_studio_session_portrait_path(@my_studio_session, @my_studio_portrait) %>
<%= form_for(@my_studio_portrait, :url => url, :html => {:multipart => true}) do |f| %>

    <%= render 'shared/error_messages', record: @my_studio_portrait %>

    <div class="field">
      <%= f.label :image, 'Portrait:' %>
      <%= f.file_field :image %>
      <%= f.label :remote_image_url, 'or Portrait URL' %>
      <%= f.text_field :remote_image_url %>
      <%= f.submit :id => 'my_submit' %>
      <span id="spinner" style="display:none"></span>
    </div>

<% end %>