<div>
  <h3>Mini Site Info</h3>
  <%= f.fields_for :mini_site, mini_site do |g| %>
      <div class="field">
        <%= g.label :bgcolor %>
        <br/>
        <%= g.text_field :bgcolor %>
      </div>

      <div class="image-thumb">
        <%= image_tag_thumb(mini_site) %>
      </div>
      <div class="field">
        <%= g.label :image, 'Logo' %>
        <%= g.file_field :image %>
        <%= g.label :remote_image_url, 'or Logo URL' %>
        <%= g.text_field :remote_image_url %>
      </div>
      <div class="field">
        <%= g.label :font_family %>
        <br/>
        <%= g.text_field :font_family %>
      </div>
      <div class="field">
        <%= g.label :font_color %>
        <br/>
        <%= g.text_field :font_color %>
      </div>
      <div class="field">
        <%= g.label :theme %>
        <br/>
        <%= g.text_field :theme %>
      </div>
  <% end %>
</div>
