<div id='title_bar'>
  <h3><%= t(:my_studio_dashboards_sessions_title) %></h3>
</div>

<div class="panel_contents">

  <table id='dashboard_sessions'>
    <tr>
      <th>Session</th>
      <th>Client</th>
      <th>Touchpoint Emails</th>
      <th>Portraits</th>
      <% if current_user.admin? %>
          <th>New Portrait?</th>
          <th>Actions</th>
      <% end %>
      <th>Session Date</th>
    </tr>

    <% sessions.each do |session| %>
        <tr>
          <td><%= link_to session.display_name(current_user.admin?), my_studio_session_path(session) %></td>
          <td><%= session.try(:client).try(:name) %></td>
          <td><%= (session.emails.count > 0) ? link_to(session.emails.count.to_words, session_list_admin_customer_email_path(session)) : '' %></td>
          <td>
            <% if session.portraits.count < 3 %>
                <%= link_to 'Upload portraits', my_studio_session_portraits_path(session) %>
            <% else %>
                <%= link_to session.portraits.count.to_words, my_studio_session_portraits_path(session) %>
            <% end %>
          </td>
          <% if current_user.admin? %>
              <td>
                <%= session.portraits.last_day.count > 0 ? 'yes' : 'no' %>
              </td>
              <td>
                <%= session.email_ready? ? link_to('Generate Email', generate_admin_customer_email_path(session.id), :method => :post) : '' %>
              </td>
          <% end %>
          <td><%= time_short_now(session.session_at) %></td>
        </tr>
    <% end %>
  </table>
</div>