<div class='sub-form' title='Client Info'>

  <%= f.fields_for :client, client do |g| %>

      <div class="control-group">
        <%= g.label :email, class: "control-label" %>
        <div class="controls">
          <%= g.email_field :email, placeholder: t('.email_placeholder') %>
        </div>
      </div>

      <div class="control-group">
        <%= g.label :name, class: "control-label" %>
        <div class="controls">
          <%= g.text_field :name, placeholder: t('.name_placeholder') %>
          <span class="help-inline"><%= t('.name_help') %></span>
        </div>
      </div>

      <% if is_admin? %>
          <div class="control-group">
            <div class="controls">
              <label class= "checkbox">
              <%= g.check_box :active %> Client active?
                <span class="help-inline"> Uncheck this to remove all sessions for this client from active email marketing.</span>
              </label>
            </div>
          </div>
      <% end %>

  <% end %>

</div>