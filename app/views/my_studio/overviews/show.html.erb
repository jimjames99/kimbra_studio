<h1 style='text-align:left;'> <%= @my_studio.try(:name) %> </h2>
<p>Phone: <%= @my_studio.try(:phone_number) %></p>

<div class='container'>
  <div class='motivation'>
    <%= portrait_uploaded_days_ago_text %>
  </div>
  <%= button_to 'Upload some now!', new_my_studio_session_path, method: :get %>
  <div class='motivation'>
    Total revenue so far: <%= number_to_currency @sum_purchases %> Your commmission (at <%= @commission_rate %>%):
    <%= number_to_currency @total_commissions %>
  </div>
</div>

<div class='container'>
  <%= render 'my_studio/dashboards/recent_portraits', :sessions => @sessions %>
</div>

<div class='container'>
  <%= render 'my_studio/dashboards/sessions', :sessions => @sessions %>
</div>

<div class='container'>
  <%= render 'my_studio/dashboards/emails', :sessions => @sessions %>
</div>

<div class='span-24 column'>
  <div class='ar-widget'>
    <h3 style='text-align:left;'> <%=t(:my_studio_overview_label_session)%> </h3>
    <%= link_to t(:my_studio_overview_link_session), my_studio_sessions_path %>
  </div>
  <div class='ar-widget'>
    <h3 style='text-align:left;'> <%=t(:my_studio_overview_label_staff)%> </h3>
    <%= link_to t(:my_studio_overview_link_staff, :action => 'View '), my_studio_staffers_path %>
  </div>
  <div class='ar-widget'>
    <h3 style='text-align:left;'> <%=t(:my_studio_overview_label_info)%> </h3>
    <%= link_to t(:my_studio_overview_link_info, :action => 'View '), user_path(current_user) %>
  </div>
  <div class='ar-widget'>
    <h3 style='text-align:left;'> <%=t(:my_studio_overview_label_studio)%> </h3>
    <%= link_to t(:my_studio_overview_link_studio, :action => 'View '), studio_path(current_user.studio) %>
  </div>
</div>

<div class='span-6 last ar-widget'>
  <!-- This is groovy and I think we'll use it for something. -->
  <%= image_tag 'kimbra_logo.png' %>
</div>