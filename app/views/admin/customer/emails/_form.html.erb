          <% if @admin_customer_email.offers[index] %>
            email offer id
          <% else %>
              <%= link_to "New Offer #{index+1}", new_admin_email_offer_path %>
          <% end %>
        </div>
    <% end %>


    <div class="field">
      <%= f.label :shoot %>
      <br/>
      <%= f.text_field :shoot %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
