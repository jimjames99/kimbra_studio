<h1><%=t(:admin_customer_emails_index_title)%></h1>

<%= link_to t(:admin_customer_emails_new_link), new_admin_customer_email_path %>
<br/>
<%= link_to t(:admin_overview_link), admin_overview_path %>

<table>
  <tr>
    <th>Message</th>
    <th>Sent at</th>
    <th>Active</th>
    <th>Offers</th>
    <th></th>
    <th></th>
  </tr>

<% @admin_customer_emails.each do |admin_customer_email| %>
  <tr>
    <td><%= admin_customer_email.message %></td>
    <td><%= admin_customer_email.sent_at %></td>
    <td><%= admin_customer_email.active %></td>
    <td><%= link_to t(:offers), admin_customer_email_offers_path(admin_customer_email) %></td>
    <td><%= link_to t(:show), admin_customer_email %></td>
    <td><%= link_to t(:edit), edit_admin_customer_email_path(admin_customer_email) %></td>
    <td><%= link_to t(:destroy), admin_customer_email, confirm: t(:link_destroy_confirm), method: :delete %></td>
  </tr>
<% end %>
</table>

