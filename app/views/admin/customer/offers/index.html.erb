<h2>
  <%= t(:admin_customer_offers_index_title) %>
  <small>Result Set Count:<%= @record_count %></small>
</h2>

<div class="row">

  <div class="span5">

    <form class="form-search">
      <div class="input-append">
        <%= text_field_tag(:search, session[:search_admin_customer_offers_session], class: "span4 search-query", placeholder: 'Not working yet') %>
        <%= submit_tag "Search", name: nil, class: "btn" %>
      </div>
    </form>
  </div>

  <% if is_admin? %>
      <div class="span3">
        <%= form_tag new_admin_customer_email_offer_path(@email), method: :get, class: "pull-right" do %>
            <button type="submit" class="btn btn-success">
              <i class="icon-plus icon-white"></i>
              <%= t(:admin_customer_offers_new_link) %>...
            </button>
        <% end %>
      </div>
  <% end %>

</div>

<div class="paginate">
  <%= paginate @admin_customer_offers %>
</div>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Actions</th>
    <th>Studio</th>
    <th>Name</th>
    <th>Kimbra Piece</th>
    <th>Custom Piece</th>
    <th>Description</th>
    <th>Activation code</th>
    <th>Active</th>
  </tr>
  </thead>
  <tbody>
  <% @admin_customer_offers.each do |offer| %>
      <tr>
        <td>
          <%= link_to t(:show), admin_customer_email_offer_path(@email, offer) %>
          <br>
          <%= link_to t(:edit), edit_admin_customer_email_offer_path(@email, offer) %>
          <br>
          <%= link_to t(:destroy), admin_customer_email_offer_path(@email, offer), confirm: t(:link_destroy_confirm), method: :delete %>
        </td>

        <td><%= offer.try(:email).try(:my_studio_session).try(:studio).try(:name) %></td>
        <td><%= offer.name %></td>
        <td><%= image_tag_list(offer.piece) %></td>
        <td><%= image_tag_list(offer) %></td>
        <td><%= offer.description %></td>
        <td><%= offer.activation_code %></td>
        <td><%= offer.active %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<div class="paginate">
  <%= paginate @admin_customer_offers %>
</div>
