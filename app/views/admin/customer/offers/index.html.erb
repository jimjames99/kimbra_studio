<h2>
  <%= t(:admin_customer_offers_index_title) %>
  <small>Result Set Count:<%= @record_count %></small>
</h2>

<div class="paginate">
  <%= paginate @admin_customer_offers %>
</div>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Actions</th>
    <th>Studio</th>
    <th>Name</th>
    <th>Kimbra Piece</th>
    <th>Custom Piece</th>
    <th>Description</th>
    <th>Activation code</th>
    <th>Active</th>
  </tr>
  </thead>
  <tbody>
  <% @admin_customer_offers.each do |admin_customer_offer| %>
      <tr>
        <td>
          <%= link_to t(:show), admin_customer_email_offer_path(@email, admin_customer_offer) %>
          <br>
          <%= link_to t(:edit), edit_admin_customer_email_offer_path(@email, admin_customer_offer) %>
          <br>
          <%= link_to t(:destroy), admin_customer_email_offer_path(@email, admin_customer_offer), confirm: t(:link_destroy_confirm), method: :delete %>
        </td>

        <td><%= admin_customer_offer.try(:email).try(:my_studio_session).try(:studio).try(:name) %></td>
        <td><%= admin_customer_offer.name %></td>
        <td><%= image_tag_list(admin_customer_offer.piece) %></td>
        <td><%= image_tag_list(admin_customer_offer) %></td>
        <td><%= admin_customer_offer.description %></td>
        <td><%= admin_customer_offer.activation_code %></td>
        <td><%= admin_customer_offer.active %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<div class="paginate">
  <%= paginate @admin_customer_offers %>
</div>
