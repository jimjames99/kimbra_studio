<div class="show">
    <%= render 'shared/error_messages', record: @admin_customer_offer %>

    <% url = @admin_customer_offer.id.nil? ? admin_customer_email_offers_path(@email) : admin_customer_email_offer_path(@email, @admin_customer_offer) %>
    <%= form_for(@admin_customer_offer, :url => url, :html => {:multipart => true}) do |f| %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :custom_layout %>
          <%= f.text_field :custom_layout %>
        </div>
        <div class="field">
          <%= f.label :image, 'Final Piece image' %>
          <%= f.file_field :image %>
          <%= f.label :remote_image_url, 'or image URL' %>
          <%= f.text_field :remote_image_url %>
        </div>
        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, :rows => 4 %>
        </div>
        <div class="field">
          <%= f.label :activation_code %>
          <%= f.text_field :activation_code %>
        </div>
        <div class="field">
          <%= f.label :active %>
          <%= f.check_box :active %>
        </div>
        <div class="actions">
          <%= f.submit :id => 'my_submit' %>
          <span id="spinner" style="display:none"></span>
        </div>
    <% end %>
</div>

<%= render 'admin/customer/offers/side_menu', :offer => @admin_customer_offer %>
<div class="clear-both"/>