<div class="row">

  <div class="span7">

    <% if is_admin? %>
        <p>
          <span>Items:</span>
          <%= link_to 'Items', admin_customer_email_offer_items_path(@admin_customer_offer.email.id, @admin_customer_offer.id) %>
        </p>
    <% end %>


