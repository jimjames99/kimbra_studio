          <span>Custom Piece Side 1</span>
          <%= image_tag @admin_customer_offer.image_front_url.to_s %>
        </p>

        <p>
          <span>Custom Piece Side 2</span>
          <%= image_tag @admin_customer_offer.image_back_url.to_s %>
        </p>
    <% else %>
        <p>
          <span>Custom Piece</span>
          <%= image_tag @admin_customer_offer.image_url.to_s, :title => "@admin_customer_offer.name", :alt => "@admin_customer_offer.name", :width => @admin_customer_offer.width, :height => @admin_customer_offer.height %>
        </p>
    <% end %>
