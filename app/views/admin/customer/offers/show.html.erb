    <p>
      <span>Active:</span>
      <%= @admin_customer_offer.active %>
      <% if @admin_customer_offer.frozen_offer? %>
          <i class="icon-shopping-cart"> </i>
      <% end %>
    </p>

    <p>
      <span>Email:</span>
      <%= @admin_customer_offer.try(:email).try(:my_studio_session).try(:client).try(:email) %>
    </p>

    <p>
      <span>Name:</span>
      <%= @admin_customer_offer.name %>
    </p>

    <p style="width:400px;">
      <span>Description:</span>
      <%= @admin_customer_offer.description %>
    </p>

    <p>
      <span>Activation code:</span>
      <%= @admin_customer_offer.activation_code %>
    </p>

    <%= link_to t(:edit), edit_admin_customer_email_offer_path(@email, @admin_customer_offer), class: "btn btn-success" %>
    |
    <%= link_to t(:back), admin_customer_email_offers_path(@email), class: "btn btn-primary" %>
    <!-- left side -->
  </div>

  <div class="span3">
    <%= render 'admin/customer/offers/side_menu', :offer => @admin_customer_offer %>
    <!-- right side -->

  </div>

</div>
