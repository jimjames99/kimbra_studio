.row
  .span5
    .whitebox
      %h2 Stories

      %table#story_table.table.table-condensed
        %thead
        %tbody
          - @dates.each do |date|
            %tr
              %td= date_with_day(date)
              %td.right= remote_link_for_fetching_stories(date, @with_names, :with)

      %table#story_table.table.table-condensed
        %thead
          %tr
            %th Browsers
            %th
        %tbody
          - @stats[:browsers].each do |browser,count|
            %tr
              %td= browser
              %td.right= "#{((count.to_f / @stats[:total]) * 100).round(0)}%"

      %table#story_table.table.table-condensed
        %thead
          %tr
            %th PCs or Macs
            %th
        %tbody
          - @stats[:oses].each do |os,count|
            %tr
              %td= os
              %td.right= "#{((count.to_f / @stats[:total]) * 100).round(0)}%"
  .span11#stories_display
    =render 'stories', :object => @stories, :locals => {:heading => @heading}