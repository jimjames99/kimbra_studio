<h2>Listing states</h2>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td><%= state.name %></td>
    <td><%= link_to t(:show), state %></td>
    <td><%= link_to t(:edit), edit_state_path(state) %></td>
    <td><%= link_to t(:destroy), state, confirm: t(:link_destroy_confirm), method: :delete %></td>
  </tr>
<% end %>
</table>

