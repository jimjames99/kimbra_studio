<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :email %>
      <br/>
      <%= f.email_field :email %>
    </div>

    <div class="field column">
      <%= f.label :first_name %>
      <br/>
      <%= f.text_field :first_name %>
    </div>
    <div class="field column">
      <%= f.label :last_name %>
      <br/>
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :friendly_name %>
      <br/>
      <%= f.text_field :friendly_name %>
    </div>
    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label :address_1 %><br />
      <%= f.text_field :address_1 %>
    </div>
    <div class="field">
      <%= f.label :address_2 %><br />
      <%= f.text_field :address_2 %>
    </div>
    <div class="field column">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field column">
      <%= f.label :state_id, "State/Province" %>
      <%= f.select :state_id, @states,
                   :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.text_field :zip_code %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
