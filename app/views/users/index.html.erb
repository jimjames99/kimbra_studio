<div class="row span12">

  <h2>
    <%= t(:users_index_title) %>
    <small>result set count:<%= @record_count %></small>
  </h2>

  <div class="row">

    <div class="span6">
      <%= form_tag users_path, method: :get, class: 'form-search' do %>
          <div class="input-append">
            <%= text_field_tag(:search, session[:search_users], class: "span4 search-query", placeholder: "By Name or Email or Studio Name") %>
            <%= submit_tag "Search", name: nil, class: "btn" %>
          </div>
      <% end %>
    </div>

    <div class="span3">
      <%= form_tag new_user_path, method: :get do %>
          <button type="submit" class="btn btn-success">
            <i class="icon-plus icon-white"></i>
            <%= t(:users_new_link) %>...
          </button>
      <% end %>

    </div>
  </div>
  <div class="paginate">
    <%= paginate @users %>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Actions</th>
      <th>setup</th>
      <th title="send a user email">Name</th>
      <th title="send a studio email">Studio</th>
      <th>Phone</th>
      <th>Location</th>
    </tr>
    </thead>
    <tbody>
    <% @users.all.each do |user| %>
        <tr>
          <td>
            <%= link_to 'Impersonate', "/switch_user?scope_identifier=user_#{user.id}" %>
            <br>
            <%= link_to t(:show), user %>
            <br>
            <%= link_to t(:edit), edit_user_path(user) %>
            <br>
            <%= link_to t(:destroy), user, confirm: 'Are you sure?', method: :delete %>
          </td>
          <td><%= "#{time_short_index(user.last_sign_in_at)} (#{user.try(:first_pass)})" %></td>
          <td><%= user_email_link(user) %></td>
          <td><%= studio_email_link(user.try(:studio)) %></td>
          <td><%= number_to_phone user.phone_number_display, area_code: true %></td>
          <td><%= user.try(:city_state_name) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <div class="paginate">
    <%= paginate @users %>
  </div>
</div>

