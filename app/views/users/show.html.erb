<div class="platypus-show-container">

  <p>
    <b>Name: </b>
    <%= full_name(@user) %>
  </p>

  <p>
    <b>last sign in: </b>
    <%= time_short(@user.last_sign_in_at) %>
  </p>

  <p>
    <b>Email:</b>
    <%= @user.email %>
  </p>

  <p>
    <b>Studio:</b>
    <%= @user.try(:studio).try(:name) %>
  </p>

  <p>
    <b>Friendly Name: </b>
    <%= @user.friendly_name %>
  </p>

  <p>
    <b>Phone: </b>
    <%= @user.phone_number %>
  </p>

  <p>
    <b>Address:</b>
    <%= @user.address_array.join(", ").html_safe %>
  </p>

  <%= link_to translate(:edit), edit_user_path(@user) %> |
  <% url = is_admin? ? users_path : my_studio_overview_path %>
  <%= link_to translate(:back), url %>
</div>