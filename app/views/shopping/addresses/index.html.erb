<h2>Listing shopping_addresses</h2>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |shopping_address| %>
  <tr>
    <td><%= shopping_address.first_name %></td>
    <td><%= shopping_address.last_name %></td>
    <td><%= shopping_address.email %></td>
    <td><%= shopping_address.address1 %></td>
    <td><%= shopping_address.address2 %></td>
    <td><%= shopping_address.city %></td>
    <td><%= shopping_address.state.abbreviation %></td>
    <td><%= shopping_address.zip_code %></td>
    <td><%= link_to 'Show', shopping_cart_address(shopping_address.cart) %></td>
    <td><%= link_to 'Edit', edit_shopping_cart_address_path(shopping_address.cart, shopping_address) %></td>
    <td><%= link_to 'Destroy', shopping_cart_address(shopping_address.cart), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

