<p>
  <% if address %>
      <%= address.first_name %> <%= address.last_name %><br/>
      <%= address.address1 %> <br/>
      <% if address.address2.present? %>
          <%= address.address2 %><br/>
      <% end %>
      <%= address.city %>,
      <%= address.try(:state).try(:abbreviation) %>
      <%= address.zip_code %>
      <% if address.email.present? %>
          <br><%= address.email %>
      <% end %>
      <% if address.phone.present? %>
          <br><%= number_to_phone address.phone, area_code: true %>
      <% end %>
  <% else %>
      <%= t('.no_address') %>
  <% end %>
</p>