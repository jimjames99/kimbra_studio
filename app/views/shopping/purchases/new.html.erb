<ul class="breadcrumb">
  <li><a href="#"><%= t('shopping.addresses.title') %></a> <span class="divider">/</span></li>
  <li><a href="#"><%= t('shopping.shippings.title') %></a> <span class="divider">/</span></li>
  <li class="active"><a href="#"><%= t('shopping.purchases.title') %></a> <span class="divider">/</span></li>
</ul>

<div class='row'>
  <h2><%= t('shopping.addresses.title') %></h2>
  <div class="row span6">
        <%= render 'shopping/addresses/show', address: @cart.address %>
  </div>
</div>

<div class='row'>
  <h2><%= t('shopping.shippings.title') %></h2>
  <div class="row span6">
        <%= render 'shopping/shippings/show', shipping: @cart.shipping %>
  </div>
</div>

<div class='row'>
  <h2><%= t('shopping.purchases.title') %></h2>
  <%= render 'form' %>
</div>

<div class='row'>
  <h2><%= t('shopping.finished.title') %></h2>
</div>