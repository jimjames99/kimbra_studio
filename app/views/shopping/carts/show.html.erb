<div class='row'>
  <h2><%= t('.title') %></h2>
  You have <span id="cart_count"><%= pluralize @cart.quantity, 'piece' %></span> in your cart.

  <% url = if @cart.purchase.present?
             edit_shopping_cart_purchase_path(@cart)
           elsif @cart.address.present?
             edit_shopping_address_path(@cart.address)
           else
             new_shopping_address_path
           end %>
  <% if @cart.try(:items).try(:size).to_i > 0 %>
      <% name = "#{icon_minisite('icon-shopping-cart')} #{t('.checkout')}".html_safe %>
      <%= link_to name, url, class: "btn btn-success" %>
  <% end %>
</div>

<%= render('shopping/items/index', cart: @cart, show_status_only: false) %>
