$(function () {
    return $('div.spin').each(function (index, el) {
        var input_or_button_or_anchor, span, spinner;
        span = $(el).find('.spinner');
        input_or_button_or_anchor = $(span).prev();
        spinner = new Spinner(spinnerOpts).spin();
        $(span).append(spinner.el);
        $(input_or_button_or_anchor).click(function () {
            return $(span).toggle();
        });
        return $(input_or_button_or_anchor).bind('invalid', function () {
            return $(span).toggle();
        });
    });
});
